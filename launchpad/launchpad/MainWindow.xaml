<controls:BiaWindow x:Class="launchpad.MainWindow"
                    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                    xmlns:local="clr-namespace:launchpad"
                    xmlns:controls="clr-namespace:Biaui.Controls;assembly=Biaui"
                    mc:Ignorable="d"
                    Title="Launchpad" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="30"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <ComboBox Name="PadSelector" Grid.Column="0" Grid.Row="0" HorizontalAlignment="Left" Margin="0, 0,0,0" Width="770"/>
        <Button Name="PadConfigurationButton" Grid.Column="1" Grid.Row="0" Content="o" Height="30" VerticalContentAlignment="Center"/>
        <ScrollViewer Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="1" HorizontalScrollBarVisibility="Visible" VerticalScrollBarVisibility="Visible">
            <Grid x:Name="MissionGrid"></Grid>
        </ScrollViewer>
    </Grid>
</controls:BiaWindow>
