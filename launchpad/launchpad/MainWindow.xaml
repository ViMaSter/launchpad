<controls:BiaWindow x:Class="launchpad.MainWindow"
                    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                    xmlns:local="clr-namespace:launchpad"
                    xmlns:controls="clr-namespace:Biaui.Controls;assembly=Biaui"
                    mc:Ignorable="d"
                    Title="MainWindow" Height="450" Width="800">
    <Grid x:Name="MissionGrid">
        <Button Content="Button" HorizontalAlignment="Center" VerticalAlignment="Center" Height="414" Width="780">
            <Button.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FF2E2E2E"/>
                    <GradientStop Color="#FF171717" Offset="1"/>
                </LinearGradientBrush>
            </Button.Background>
        </Button>
    </Grid>
</controls:BiaWindow>
